{
  "name": "vscode-i18n-linter",
  "displayName": "kiwi-linter",
  "description": "A VSCode extension to identify and extract string literals for js(x)/ts(x) files",
  "version": "1.5.7",
  "publisher": "zwenjian",
  "engines": {
     "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alibaba/kiwi"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:javascript",
    "onLanguage:html",
    "onLanguage:vue"
  ],
  "main": "./out/extension",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "I18N Linter",
      "properties": {
        "vscode-i18n-linter.markStringLiterals": {
          "type": "boolean",
          "default": true,
          "description": "Mark string literals in editor so you can quickly spot on them"
        },
        "vscode-i18n-linter.langPrefix": {
          "type": "string",
          "default": ".kiwi/zh-CN/",
          "description": "Language store path"
        },
        "vscode-i18n-linter.showOverviewRuler": {
          "type": "boolean",
          "default": true,
          "description": "Show non-English letter position on the overview ruler"
        },
        "vscode-i18n-linter.markColor": {
          "type": "string",
          "default": "#f40",
          "description": "The color of matched non-English letters"
        },
        "vscode-i18n-linter.enableReplaceSuggestion": {
          "type": "boolean",
          "default": true,
          "description": "Add a light blob beside string literal and provide I18N variable replacement suggestions"
        },
        "vscode-i18n-linter.i18nFilesPattern": {
          "type": "string",
          "default": "**/src/**/*.+(vue|js*|html|ts*)",
          "description": "A glob expression (eg. abc/**/*.ts) to match I18N translation files"
        },
        "vscode-i18n-linter.importI18nPath": {
          "type": "string",
          "default": "import I18N from 'src/utils/I18N';",
          "description": "how to import I18N module"
        },
        "vscode-i18n-linter.autoImportI18n": {
          "type": "boolean",
          "default": true,
          "description": "Automatically import I18N module when extracting Chinese"
        },
        "vscode-i18n-linter.langScene": {
          "type": "boolean",
          "default": false,
          "description": "Does the text extraction generate scene information"
        },
        "vscode-i18n-linter.agentAppId": {
          "type": "string",
          "default": "",
          "description": "Scene translation intelligent agent application ID"
        },
        "vscode-i18n-linter.aliConsoleAK": {
          "type": "string",
          "default": "",
          "description": "Used for alibaba bailian console model calling"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-i18n-linter.replaceCommon",
        "title": "Replace Common String Literals to I18N variables"
      },
      {
        "command": "vscode-i18n-linter.findI18N",
        "title": "Search inside Current File for I18N Strings"
      },
      {
        "command": "vscode-i18n-linter.findAllI18N",
        "title": "Search inside All Files for I18N Strings"
      },
      {
        "command": "vscode-i18n-linter.searchI18N",
        "title": "Search I18N Strings inside Current File or All Files "
      },
      {
        "command": "vscode-i18n-linter.kiwigo",
        "title": "Kiwi Go!"
      },
      {
        "command": "vscode-i18n-linter.switchTranslateApi",
        "title": "Switch Translate Api"
      },
      {
        "command": "vscode-i18n-linter.clearSearchResults",
        "title": "Clear Search Results",
        "icon": {
          "light": "media/clear-light.svg",
          "dark": "media/clear-dark.svg"
        }
      },
      {
        "command": "vscode-i18n-linter.refreshSearch",
        "title": "Refresh",
        "icon": {
          "light": "media/refresh-light.svg",
          "dark": "media/refresh-dark.svg"
        }
      },
      {
        "command": "vscode-i18n-linter.collapseAll",
        "title": "Collapse All",
        "icon": {
          "light": "media/collapse-light.svg",
          "dark": "media/collapse-dark.svg"
        }
      },
      {
        "command": "vscode-i18n-linter.expandAll",
        "title": "Expand All",
        "icon": {
          "light": "media/expand-light.svg",
          "dark": "media/expand-dark.svg"
        }
      },
      {
        "command": "vscode-i18n-linter.searchInFolder",
        "title": "kiwi-linter: Search in Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-i18n-linter.searchInFolder",
          "group": "4_search",
          "when": "explorerResourceIsFolder"
        }
      ],
      "view/title": [
        {
          "command": "vscode-i18n-linter.clearSearchResults",
          "when": "view == kiwi.search.input",
          "group": "navigation@1"
        },
        {
          "command": "vscode-i18n-linter.collapseAll",
          "when": "view == kiwi.search.input && !vscode-i18n-linter.searchDefaultCollapse",
          "group": "navigation@2"
        },
        {
          "command": "vscode-i18n-linter.expandAll",
          "when": "view == kiwi.search.input && vscode-i18n-linter.searchDefaultCollapse",
          "group": "navigation@2"
        },
        {
          "command": "vscode-i18n-linter.refreshSearch",
          "when": "view == kiwi.search.input",
          "group": "navigation@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiwi-search-view",
          "title": "Kiwi",
          "icon": "media/favicon.svg"
        }
      ]
    },
    "views": {
      "kiwi-search-view": [
        {
          "type": "webview",
          "id": "kiwi.search.input",
          "name": "I18N Search"
        }
      ]
    }
  },
  "keywords": [
    "React",
    "i18n"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile",
    "webview:build": "node ./scripts/build.mjs",
    "webview:watch": "node ./scripts/build.mjs --watch"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^2.2.42",
    "@types/node": "22.18.10",
    "@types/vscode": "1.103.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "esbuild": "0.25.10",
    "@stylexjs/esbuild-plugin": "0.11.1"
  },
  "dependencies": {
    "@angular/compiler": "^7.2.0",
    "@babel/core": "^7.5.5",
    "@babel/types": "^7.5.5",
    "@vue/component-compiler-utils": "^3.1.1",
    "@vscode/webview-ui-toolkit": "1.4.0",
    "@stylexjs/stylex": "0.15.3",
    "axios": "^1.10.0",
    "baidu-translate": "^1.1.0",
    "find-in-files": "^0.5.0",
    "fs-extra": "^7.0.1",
    "globby": "^7.1.1",
    "google-translate": "^2.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-virtuoso": "4.14.1",
    "react-use": "17.6.0",
    "react-icons": "5.5.0",
    "unport": "0.7.1",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "pinyin-pro": "^3.3.1",
    "prettier": "^1.16.4",
    "slash2": "^2.0.0",
    "ts-node": "^6.0.3",
    "typescript": "5.9.2",
    "vue-template-compiler": "^2.6.11"
  }
}
